- var url         = "http://react.careers"
- var name        = "React.careers"
- var title       = "React.js Jobs and Companies"
- var logoUrl     = "http://react.careers/logo.png"
- var description = "Find jobs and companies where you can use your favorite framework: React.js"

meta(charset="utf-8")
meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
title= title
meta(name="description" content=description)
meta(name="viewport" content="width=device-width, initial-scale=1")

//- opengraph
meta(property="og:type"         content="website")
meta(property="og:title"        content=title)
meta(property="og:site_name"    content=name)
meta(property="og:url"          content=url)
meta(property="og:image"        content=logoUrl)
meta(property="og:description"  content=description)

//- schema.org
meta(property="og:type"         content="website")
meta(property="og:url"          content=url)
meta(property="og:title"        content=title)
meta(property="og:description"  content=description)
meta(property="og:image"        content=logoUrl)
meta(property="og:site_name"    content=name)

//- twitter card
meta(name="twitter:card"        content="summary_large_image")
meta(name="twitter:site"        content="@reactcareers")
meta(name="twitter:creator"     content="@stefanritter")
meta(name="twitter:title"       content=title)
meta(name="twitter:description" content=description)
meta(name="twitter:image:src"   content=logoUrl)

//- links
link(rel="shortcut icon" href="/favicon.png")
link(rel="apple-touch-icon" href="/logo.png")
link(rel="canonical" href=url)
link(href='http://fonts.googleapis.com/css?family=Raleway:300,700' rel='stylesheet' type='text/css')
